<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cs65.homie">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="false"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HOMiE"
        tools:ignore="HardcodedDebugMode">
        <activity android:name=".ui.login.ui.login.RegistrationActivity" />
        <activity android:name=".ui.ProfileSettingsActivity" />
        <activity
            android:name=".ui.login.ui.login.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustResize|stateUnchanged"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ImageFullScreenActivity" />
        <activity android:name=".ui.profile.view.ProfileViewActivity"/>
        <activity android:name="com.soundcloud.android.crop.CropImageActivity" />
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.cs65.homie.ui"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>